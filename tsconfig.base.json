{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    // like @tsconfig/vite-react but with module preserve
    "target": "es2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "preserve",
    // ^ also implies:
    // "moduleResolution": "bundler",
    // "esModuleInterop": true,
    // "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "jsx": "react-jsx",

    "noEmit": true,
    "strict": true,
    "verbatimModuleSyntax": true,
    // ^ implies isolatedModules: true

    "moduleDetection": "force",

    // intended to be used with
    // @tsconfig/strictest npm package
    // or for legacy codebase as
    // tsconfig.legacy.base.json

    "paths": {
      "@carma-apps/envirometrics": [
        "libraries/appframeworks/envirometrics/src/index.ts"
      ],
      "@carma-apps/portals": ["libraries/appframeworks/portals/src/index.ts"],
      "@carma-apps/topicmaps": [
        "libraries/appframeworks/topicmaps/src/index.ts"
      ],
      "@carma-collab/wuppertal/baederkarte": [
        "libraries/collaboration/carma-wuppertal-collab/src/baederkarte/index.ts"
      ],
      "@carma-collab/wuppertal/e-auto-ladestation": [
        "libraries/collaboration/carma-wuppertal-collab/src/e-auto-ladestation/index.ts"
      ],
      "@carma-collab/wuppertal/commons": [
        "libraries/collaboration/carma-wuppertal-collab/src/commons/index.ts"
      ],
      "@carma-collab/wuppertal/hochwassergefahrenkarte": [
        "libraries/collaboration/carma-wuppertal-collab/src/hochwasssergefahrenkarte/index.jsx"
      ],
      "@carma-collab/wuppertal/starkregengefahrenkarte": [
        "libraries/collaboration/carma-wuppertal-collab/src/starkregengefahrenkarte/index.jsx"
      ],
      "@carma-commons/debug": ["libraries/commons/debug/src/index.ts"],
      "@carma-commons/document-viewer": [
        "libraries/commons/document-viewer/src/index.ts"
      ],
      "@carma-mapping/cesium-engine": [
        "libraries/mapping/engines/cesium/src/index.ts"
      ],
      "@carma-mapping/cesium-engine/shaders": [
        "libraries/mapping/engines/cesium/src/lib/shaders.ts"
      ],
      "@carma-mapping/cesium-engine/types": [
        "libraries/mapping/engines/cesium/src/index.d.ts"
      ],
      "@carma-mapping/cesium-engine/utils": [
        "libraries/mapping/engines/cesium/src/lib/utils/index.ts"
      ],
      "@carma-mapping/cesium-widget-engine": [
        "libraries/mapping/engines/cesium-widget/src/index.ts"
      ],
      "@carma-mapping/components": [
        "libraries/mapping/carma-map-components/src/index.ts"
      ],
      "@carma-mapping/layers": [
        "libraries/mapping/carma-map-layers/src/index.ts"
      ],
      "@carma-mapping/leaflet-engine": [
        "libraries/mapping/engines/leaflet/src/index.ts"
      ],
      "@carma-mapping/map-controls-layout": [
        "libraries/mapping/carma-map-control-layout/src/index.ts"
      ],
      "@carma-mapping/maplibre-engine": [
        "libraries/mapping/engines/maplibre/src/index.ts"
      ],
      "@carma-mapping/utils": ["libraries/mapping/carma-map-utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
